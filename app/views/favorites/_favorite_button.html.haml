- if current_user.favorite?(radio)
  = form_with(model: current_user.favorites.find_by(radio_id: radio.id), local: true, method: :delete) do |f|
    = hidden_field_tag :radio_id, radio.id
    = f.submit 'Unlike', class: 'btn btn-dark btn-sm'
- else
  = form_with(model: current_user.favorites.build, local: true) do |f|
    = hidden_field_tag :radio_id, radio.id
    = f.submit 'Like', class: 'btn btn-info btn-sm'
