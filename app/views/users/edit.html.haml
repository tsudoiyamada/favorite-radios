.text-left
  %h2 Edit Profile
.row
  .col-am-8.offset-sm-2
    = form_with(model: @user, local: true) do |f|
      .form-group
        = f.label :name, 'Name'
        = f.text_field :name, class: 'form-control'
      .form-group
        = f.label :email, 'Email'
        = f.email_field :email, class: 'form-control'
      .field
        = f.label :introduction, 'Your Introduction (within: 500 characters):'
        = f.text_area :introduction, size: '50×20', class: 'form-control'
      .form-group
        = f.label :image
        - if @user.image.attached?
          = image_tag @user.image,
              class: "img-thumbnail d-block mb-3", width: 200, height: 200
        = f.file_field :image, class: "form-control-file"
        - if @user.image.attached?
          .checkbox
            %label
              = f.check_box :remove_image
              画像を削除する
      = f.submit 'Register', class: 'btn btn-success btn-block'
